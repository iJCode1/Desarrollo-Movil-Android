<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Opciones">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="117dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="@string/txtMenu"
            android:textAlignment="center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="calculadora"
            android:text="@string/btnCalculadora"
            android:textColor="#000000"
            android:textSize="24sp"
            app:backgroundTint="@color/calc" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="imagenes"
            android:text="@string/btnImagenes"
            android:textColor="#3C3C3C"
            android:textSize="24sp"
            app:backgroundTint="@color/carneClaro" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="web"
            android:text="@string/btnWeb"
            android:textColor="#424242"
            android:textSize="24sp"
            app:backgroundTint="@color/verdeClaro" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="video"
            android:text="@string/btnVideo"
            android:textSize="24sp"
            app:backgroundTint="@color/moradoclaro" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="reloj"
            android:text="@string/btnReloj"
            android:textColor="#323131"
            android:textSize="24sp"
            app:backgroundTint="@color/azulclaro2" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="diferente"
            android:text="@string/btnDiferente"
            android:textSize="24sp"
            app:backgroundTint="@color/naranjaClaro" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="rating"
            android:text="@string/btnRating"
            android:textSize="24sp"
            app:backgroundTint="@color/grisclaro" />

        <Button
            android:id="@+id/btnAcercaDe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="alerta"
            android:text="@string/btnAbout"
            android:textColor="#2E2D2D"
            android:textSize="24sp"
            app:backgroundTint="@color/verde2" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="salir"
            android:text="@string/btnSalir"
            android:textSize="30sp"
            app:backgroundTint="@color/salir" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>